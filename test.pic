Diodes
.\" ======================================================
.PS

showgrid(3,2)

diode("D1", "1N4148", "d")
right; wire(8);
diode("D2", "1N4001", "u")
right; wire(8)
zenerdiode("D3", "BZX85C", "d")
right; wire(8)
zenerdiode("D3", "BZX85C", "u")
zenerdiode("D3", "BZX85C", "r")
down; wire(10)
zenerdiode("D3", "BZX85C", "l")
left; move 2.4;
schottkydiode("D4","BAT53","d")
