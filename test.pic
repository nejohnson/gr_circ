.\" ======================================================
A small RC network:
.\" ======================================================
.
.PS
showgrid(3,1)

move down 0.6
right
terminal()
wire(2)
junc
{ up
  wire(4)
  right
  resistor(R1,,r)
  wire(2)
  capacitor(C1,,r)
  down
  wire(4)
}
{ down
  wire(4)
  right
  wire(1)
  capacitor(C2,,r)
  wire(9)
  up
  wire(4)
}
wire(5)
resistor(R2,,r)
wire(3)
junc
wire(2)
terminal()

.PE

