## JUNCTIONS AND WIRES ###################################

# Junction #

define junc {
  { circle rad 0.02 filled 1 at Here }
}

##########################################################

# Wire #
#
# $1 = length
#  or
# $1 = start
# $2 = end

define wire {
  linethick = 1
  if("$2"=="") then {
    line 0.1*$1
  } else {
    line from $1 to $2
  }
}

##########################################################

# Simple terminal

define terminal {
  linethick = 1
  TRM: box wid 0.1 ht 0.1 filled 1.0 with .c at Here
  {
    if("$2"=="" || "$2"=="r" || "$2"=="l" || "$2"=="d") then {
      "$1" at TRM.n+(0,0.1)
    } else {
      "$1" at TRM.w-(0.1,0) rjust
    }
  }
  move to TRM.c
}

##########################################################

# Signal ground

define signalground {
  {
    down
    linethick = 1
    line 0.2
    line right 0.1 then down 0.12 left 0.1 then up 0.12 left 0.1 then right 0.1
  }
}

# Frame ground

define frameground {
  {
    down
    linethick = 1
    line 0.2
    move left 0.1
    line right 0.2
    for x = -0.2 to 0.2 by 0.1 do {
      { line from Here to Here+(-0.03,-0.06) }
      move left 0.05
    }
  }
}

# Chassis ground

define chassisground {
  {
    down
    linethick = 1
    line 0.2
    { move left 0.1; line right 0.2 }
    move 0.05
    { move left 0.055; line right 0.11 }
    move 0.05
    { move left 0.01; line right 0.02 }
  }
}

##########################################################

# Power

define vpos {
  linethick = 1
  {
    up
    line 0.2
    move left 0.1
    line thick 1.5 right 0.2
    if("$1"!="") then {
      "$1" at last line .c + (0,0.08)
    }
  }
}

define vneg {
  linethick = 1
  {
    down
    line 0.2
    move left 0.1
    line thick 1.5 right 0.2
    if("$1"!="") then {
      "$1" at last line .c - (0,0.11)
    }
  }
}
