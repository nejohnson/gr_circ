## JUNCTIONS AND WIRES ###################################

# Junction #

define junc {
  { circle rad 0.02 filled 1 at Here }
}

##########################################################

# Wire #
#
# $1 = length
#  or
# $1 = start
# $2 = end

define wire {
  linethick = 1
  if("$2"=="") then {
    line 0.1*$1
  } else {
    line from $1 to $2
  }
}

##########################################################

# Simple terminal

define terminal {
  linethick = 1
  circle rad 0.05
  {$1 at last circle.n+(0,0.1)}
}
