## JUNCTIONS AND WIRES ###################################

# Junction #

define junc {
  { circle rad 0.02 filled 1 at Here }
}

##########################################################

# Wire #
#
# $1 = length
#  or
# $1 = start
# $2 = end

define wire {
  linethick = 1
  if("$2"=="") then {
    line 0.1*$1
  } else {
    line from $1 to $2
  }
}

##########################################################

# Simple terminal

define terminal {
  linethick = 1
  TRM: box wid 0.1 ht 0.1 filled 1.0 with .c at Here
  {
    if("$2"=="" || "$2"=="r" || "$2"=="l" || "$2"=="d") then {
      "$1" at TRM.n+(0,0.1)
    } else {
      "$1" at TRM.w-(0.1,0) rjust
    }
  }
  move to TRM.c
}








