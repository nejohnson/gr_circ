## JUNCTIONS AND WIRES ###################################

# Junction #

define junc {
  { circle rad 0.02 filled 1 at Here }
}

##########################################################

# Wire #
#
# $1 = length

define wire {
  linethick = 1
  line 0.1*$1
}

##########################################################

# Simple terminal

define terminal {
  linethick = 1
  circle rad 0.05
  {$1 at last circle.n+(0,0.1)}
}
